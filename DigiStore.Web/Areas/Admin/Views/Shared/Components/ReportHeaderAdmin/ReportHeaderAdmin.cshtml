@model DigiStore.Domain.ViewModels.Report.ReportAdminPanelViewModel
@if (Model != null)
{
    <div class="row">

        <div class="col-lg-3 col-md-6">
            <div class="card-box">


                <h4 class="header-title m-t-0 m-b-30">فروشنده </h4>

                <div class="widget-chart-1">
                    <div class="widget-detail-1">
                        <h2 class="p-t-10 m-b-0"> @Model.NumberofActiveSeller </h2>
                        <p class="text-muted">تعداد کل فروشنده های فعال</p>
                    </div>
                </div>
            </div>
        </div><!-- end col -->

        <div class="col-lg-3 col-md-6">
            <div class="card-box">


                <h4 class="header-title m-t-0 m-b-30">محصولات</h4>

                <div class="widget-box-2">
                    <div class="widget-detail-2">
                        <span class="badge badge-success pull-left m-t-20">@(Model.NumberOfActiveProducts) محصولات فعال </span>
                        <h2 class="m-b-0"> @Model.NumberAllProducts </h2>
                        <p class="text-muted m-b-25">تعداد کل محصولات</p>
                    </div>
                    <div class="progress progress-bar-success-alt progress-sm m-b-0">
                        <div class="progress-bar progress-bar-success" role="progressbar"
                             aria-valuenow="77" aria-valuemin="0" aria-valuemax="100"
                             style="width: @((Model.NumberOfActiveProducts*100)/Model.NumberAllProducts)%;">
                            <span class="sr-only">@Model.NumberOfActiveProducts% محصولات فعال</span>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- end col -->
      
            <div class="col-lg-3 col-md-6">
                <div class="card-box">


                    <h4 class="header-title m-t-0 m-b-30">کاربران</h4>

                    <div class="widget-box-2">
                        <div class="widget-detail-2">
                            <span class="badge badge-success pull-left m-t-20">@(Model.NumberOfAllUsers) کاربران فعال </span>
                            <h2 class="m-b-0"> @Model.NumberOfUser </h2>
                            <p class="text-muted m-b-25">تعداد کل کاربران </p>
                        </div>
                        <div class="progress progress-bar-success-alt progress-sm m-b-0">
                            <div class="progress-bar progress-bar-success" role="progressbar"
                                 aria-valuenow="77" aria-valuemin="0" aria-valuemax="100"
                                 style="width: @((Model.NumberOfAllUsers*100)/Model.NumberOfUser)%;">
                                <span class="sr-only">@Model.NumberOfAllUsers% کاربران فعال</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- end col -->
        
        <div class="col-lg-3 col-md-6">
            <div class="card-box">
                <h4 class="header-title m-t-0 m-b-30">فروش روزانه</h4>

                <div class="widget-box-2">
                    <div class="widget-detail-2">
                        <h2 class="m-b-0"> @Model.TotalPurchaseToday.ToString("#,0")  </h2>
                        <p class="text-muted m-b-25">تومان</p>
                    </div>
                </div>
            </div>
        </div><!-- end col -->

    </div>
}