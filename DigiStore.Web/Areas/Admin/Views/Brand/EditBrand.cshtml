@using DigiStore.Application.Extensions
@model DigiStore.Domain.ViewModels.Brand.EditBrandViewModel
@{
    ViewData["Title"] = "ویرایش برند";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles
{
    <link href="/Admin/assets/plugins/fileuploads/css/dropify.min.css" rel="stylesheet" type="text/css" />
}

<div class="content">
    <div class="container">
        <h2>ویرایش برند</h2>
        <hr />
        <div class="row">
            <form method="post" asp-action="EditBrand" asp-controller="Brand" enctype="multipart/form-data">
                <input type="hidden" asp-for="BrandId" />
                <div class="col-md-8">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            اطلاعات کاربر
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="form-group">
                                <label>نام برند</label>
                                <input asp-for="BrandName" class="form-control">
                            </div>
                            <span asp-validation-for="BrandName"></span>
                            <input type="submit" value="ویرایش اطلاعات" class="btn btn-success" />
                        </div>
                        <!-- /.panel-body -->
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card-box">

                        <h4 class="header-title m-t-0 m-b-30">تصوير پروفايل</h4>

                        <div class="dropify-wrapper has-preview">

                            <div class="dropify-message">
                                <span class="file-icon"></span>
                                <p>فایل را به اینجا بکشید یا کلیک کنید</p>
                                <p class="dropify-error">با پوزش فراوان، خطایی رخ داده</p>
                            </div>
                            <div class="dropify-loader" style="display: none;"></div>
                            <div class="dropify-errors-container"><ul></ul></div>
                            <input type="file" id="imgInp" name="brandLogo" class="dropify">
                            <button type="button" class="dropify-clear">پاک کردن</button>
                            <div class="dropify-preview" style="display: block;">
                                <span class="dropify-render"><img id="UserImage" src="@(!String.IsNullOrEmpty(Model.BrandLogo)?PathExtension.BrandThumb+Model.BrandLogo:PathExtension.DefaultStoreLogo)"></span>
                                <div class="dropify-infos">
                                    <div class="dropify-infos-inner">

                                        <p class="dropify-infos-message">برای جایگزینی فایل را به اینجا بکشید یا کلیک کنید</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div> <!-- container -->

</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script>
        imgInp.onchange = evt => {
            const [file] = imgInp.files
            if (file) {
                UserImage.src = URL.createObjectURL(file)
            }
        }
    </script>
}

