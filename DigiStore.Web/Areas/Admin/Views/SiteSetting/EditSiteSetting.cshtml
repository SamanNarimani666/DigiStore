@model DigiStore.Domain.ViewModels.SiteSetting.GetSiteInformation
@{
    ViewData["Title"] = "تنظیمات اطلاعات سایت";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-sm-12">
    <div class="card-box">

        <h4 class="header-title m-t-0 m-b-30">اطلاعات سایت دیجی ادستور</h4>

        <div class="row">
            <div class="col-lg-12">
                <form class="form-horizontal" asp-controller="SiteSetting" asp-area="Admin" asp-action="EditSiteSetting" method="post" role="form">
                    <input type="hidden"  asp-for="SiteSettingId"/>
                    <div class="form-group">
                        <label class="col-md-2 control-label">تلفن تماس</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" asp-for="Phone">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label" for="example-email">ایمیل</label>
                        <div class="col-md-10">
                            <input type="email" id="example-email" asp-for="Email"  class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">کپی رایت</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" asp-for="CopyRight">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">آدرس</label>
                        <div class="col-md-10">
                            <textarea asp-for="Address" class="form-control" rows="5"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">متن پاصفحه</label>
                        <div class="col-md-10">
                            <textarea asp-for="FooterText" class="form-control" rows="5"></textarea>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-md-2 control-label">نوع متن</label>
                        <div class="col-md-10">
                            <textarea ckeditor="1" class="form-control" asp-for="AboutUs" rows="5"></textarea>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success btn-block"><i class="zmdi zmdi-edit"></i>ویرایش اطلاعات سایت</button>
                </form>
            </div><!-- end col -->



        </div><!-- end row -->
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}

