@using DigiStore.Domain.Entities
@model DigiStore.Domain.ViewModels.Discount.CreateProductDiscountViewModel
@{
    ViewData["Title"] = "ایجاد تخفیف جدید";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var product = ViewBag.product as Product;
}
@section Styles
{
    <link rel="stylesheet" type="text/css" href="/lib/datePicker/kamadatepicker.min.css" />
}
@section Scripts
{
    <script src="/lib/datePicker/kamadatepicker.holidays.js.min.js"></script>
    <script src="/lib/datePicker/kamadatepicker.min.js"></script>

    <script>
          kamaDatepicker('ExpierDate', { buttonsColor: "red", forceFarsiDigits: true });
      
    </script>
}
@await Component.InvokeAsync("SellerSidebar")
<div class="col-lg-9 col-md-8 col-xs-12 pull-right">
    <div class="col-lg-12 col-xs-12 pull-right">
        <div class="profile-navbar">
            <div class="profile-navbar-back-alignment">
                <a asp-action="FilterDiscount" asp-controller="Discount" asp-area="Seller" class="profile-navbar-btn-back">بازگشت</a>
                <h4 class="edit-personal">
                    @ViewData["Title"]

                </h4>
            </div>
        </div>
        <div class="profile-stats">
            <form method="post" asp-action="CreateProductDiscount" asp-controller="Discount" asp-area="Seller">
                <input type="hidden" value="@(product.ProductId)" />
                <div class="form-legal-row">
                    <div class="col-lg-6 col-xs-12 mx-auto">
                        <div class="form-legal-col">
                            <fieldset class="form-legal-fieldset">
                                <h4 class="form-legal-headline"> ایجاد کد تخفیف برای محصول @product.Name</h4>
                                <div class="form-legal-item">
                                    <label for="name-first">تاریخ انقضا</label>
                                    <input type="text"  asp-for="ExpierDate" id="ExpierDate" />
                                    <span asp-validation-for="ExpierDate" class="text-danger"></span>
                                </div>
                                <div class="form-legal-item">
                                    <label for="name-first">تعداد تخفیف</label>
                                    <input type="number"  asp-for="DiscountNumber" class="form-control">
                                    <span asp-validation-for="DiscountNumber" class="text-danger"></span>
                                </div>
                                <div class="form-legal-item">
                                    <label for="name-first">در صد تخفیف</label>
                                    <input type="number" id="name-first" asp-for="Percentage" class="form-control">
                                    <span asp-validation-for="Percentage" class="text-danger"></span>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>

                <div class="form-legal-row-submit">
                    <div class="parent-btn">
                        <button type="submit" class="btn btn-success">
                            ایجاد کد تخفیف
                        </button>
                    </div>
                    <a asp-action="FilterDiscount" asp-controller="Discount" asp-area="Seller" class="btn-default">انصراف</a>
                </div>
            </form>
        </div>
    </div>
</div>
