@using DigiStore.Domain.Enums.Ticket
@model DigiStore.Domain.ViewModels.Ticket.AddTicketViewModel
@{
    ViewData["Title"] = "افزورن تیکت جدید";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@await Component.InvokeAsync("UserSidebar")
<div class="col-lg-9 col-md-8 col-xs-12 pull-right">
    <div class="col-lg-12 col-xs-12 pull-right">
        <div class="headline-profile">
            <span>تیکت جدید</span>
        </div>
        <div class="profile-stats">
            <div class="profile-stats-row">
                <form method="post" asp-action="AddTicket" asp-controller="Ticket" asp-area="UserPanel">
                    <div class="form-legal-col">
                        <fieldset class="form-legal-fieldset">
                            <div class="form-group">
                                <label>عنوان تیکت</label>
                                <input type="text"  asp-for="Title" class="form-control">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="name-first">بخش مورد نظر</label>
                                <select asp-for="TicketSection" class="form-control" asp-items="@(Html.GetEnumSelectList<TicketSection>())"></select>
                                <span asp-validation-for="TicketSection" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="name-first">اولویت</label>
                                <select asp-for="TicketPriority" class="form-control" asp-items="@(Html.GetEnumSelectList<TicketPriority>())"></select>
                                <span asp-validation-for="TicketPriority" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>متن تیکت</label>
                                <textarea asp-for="Text" ckeditor="1" class="form-control" rows="10"></textarea> 
                                <span asp-validation-for="Text" class="text-danger"></span>
                            </div>
                            <div class="form-legal-row-submit">
                                <div class="parent-btn">
                                    <button type="submit" class="dk-btn dk-btn-info">
                                        ثبت اطلاعات کاربری
                                        <i class="fa fa-check sign-in"></i>
                                    </button>
                                </div>
                                <a asp-action="Dashboard" asp-controller="Home" asp-area="UserPanel" class="btn-default">انصراف</a>
                            </div>
                        </fieldset>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
