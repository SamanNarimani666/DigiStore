@model DigiStore.Domain.ViewModels.Account.ChangePasswordViewModel
@{
    ViewData["Title"] = "تغییر کلمه عبور";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@await Component.InvokeAsync("UserSidebar")

<div class="col-lg-9 col-md-8 col-xs-12 pull-right">
    <div class="col-lg-12 col-xs-12 pull-right">
        <div class="profile-navbar">
            <div class="profile-navbar-back-alignment">
                <a asp-action="Dashboard" asp-controller="Home" asp-area="UserPanel" class="profile-navbar-btn-back">بازگشت</a>
                <h4 class="edit-personal">
                    ویرایش کلمه عبور

                </h4>
            </div>
        </div>
        <div class="profile-stats">
            <form method="post" asp-action="ChangePassWord" asp-controller="Account" asp-area="UserPanel" enctype="multipart/form-data">
                <div class="form-legal-row">
                    <div class="col-lg-6 col-xs-12 mx-auto">
                        <div class="form-legal-col">
                            <fieldset class="form-legal-fieldset">
                                <h4 class="form-legal-headline">تغییر کلمه عبور</h4>
                                <div class="form-legal-item">
                                    <label for="name-first">کلمه عبور فعلی</label>
                                    <input type="password" id="name-first" asp-for="CurrentPassword" class="form-control" placeholder="نام خود را وارد کنید">
                                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                </div>
                                <div class="form-legal-item">
                                    <label for="name-first">کلمه عبور جدید</label>
                                    <input type="password" id="name-first" asp-for="NewPassword" class="form-control" placeholder="نام خود را وارد کنید">
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                                <div class="form-legal-item">
                                    <label for="name-first">تکرار کلمه عبور جدید</label>
                                    <input type="password" id="name-first" asp-for="ConfirmNewPassword" class="form-control" placeholder="نام خود را وارد کنید">
                                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>

                <div class="form-legal-row-submit">
                    <div class="parent-btn">
                        <button type="submit" class="dk-btn dk-btn-info">
                           تغییر کلمه عبور
                            <i class="fa fa-check sign-in"></i>
                        </button>
                    </div>
                    <a asp-action="Dashboard" asp-controller="Home" asp-area="UserPanel" class="btn-default">انصراف</a>
                </div>
            </form>
        </div>
    </div>
</div>

