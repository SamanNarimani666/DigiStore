@using DigiStore.Application.Extensions
@model List<DigiStore.Domain.Entities.Slider>
<!--    Start Main Slider -------------------->

<div class="col-12">
    <aside class="adplacement-header">
        <a href="index.html" class="adplacement-item" title="برای دربی آماده شو"></a>
    </aside>
</div>
@if (Model != null && Model.Any())
{
    <div class="d-block">
        <div class="col-lg-8 col-md-8 col-xs-12 pull-right">
            <div class="main-slider">
                <div class="main-slider-container">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="@Model.FirstOrDefault()" class="active"></li>
                            @for (int i = 1; i < Model.Count; i++)
                            {
                                <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                            }
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="@(PathExtension.SliderImageOrigin+ Model.FirstOrDefault()?.ImageName)" alt="Second slide">
                            </div>
                            @foreach (var item in Model.Skip(1))
                            {
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="@(PathExtension.SliderImageOrigin+item.ImageName)" alt="First slide">
                                </div>
                            }
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                           data-slide="prev">
                            <span class="fa fa-angle-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                           data-slide="next">
                            <span class="fa fa-angle-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

<!--    End Main Slider ---------------------->